      <ConsoleItem />
    </ConsoleSection>

    <Section>
      <Cover
        coverImage="/images/cover.jpg"
        title="CREATE YOUR OWN CONSOLE"
        description="Add-on to make it perfect"
      />
    </Section>

    <ConsoleSection>
      <ConsoleItem />
    </ConsoleSection>
  </main>
  <Footer />
</Layout>

